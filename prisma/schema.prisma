generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // pooler 6543
  directUrl = env("DIRECT_URL")     // direct 5432
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  name              String?
  emailVerified     DateTime?
  image             String?
  preferredLanguage String?
  timezone          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Onboarding tracking
  onboardingCompleted   Boolean   @default(false)
  onboardingCompletedAt DateTime?
  onboardingProgress    Json?     // Track which steps are done

  profile        UserProfile?
  patientProfile PatientProfile?
  sessions       Session[]
  accounts       Account[]
  conditions     Condition[]
  chatSessions   ChatSession[]
  chatMessages   ChatMessage[]
  userMemories   UserMemory[]
  healthJournal  HealthJournal[]
  foodLogs       FoodLog[]
  pushTokens     PushToken[]
}

model UserProfile {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  hasDiabetes         Boolean @default(false)
  hasThyroidIssue     Boolean @default(false)
  hasHeartIssue       Boolean @default(false)
  hasKidneyLiverIssue Boolean @default(false)
  isPregnantOrNursing Boolean @default(false)
  onBloodThinners     Boolean @default(false)

  vegetarian  Boolean @default(false)
  vegan       Boolean @default(false)
  lactoseFree Boolean @default(false)
  glutenFree  Boolean @default(false)
  nutAllergy  Boolean @default(false)

  preferredLanguages String?
  otherNotes         String?

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Session {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  mode           SessionMode
  primaryFocus   String
  nuance         String?
  timeframe      String?
  notes          String?
  structuredData Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SessionMode {
  ISSUE
  GOAL
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model PatientProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  dateOfBirth    DateTime?
  sex            Sex       @default(UNKNOWN)
  heightCm       Float?
  weightKg       Float?
  lifestyleNotes String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Condition {
  id          String            @id @default(cuid())
  userId      String
  name        String
  category    ConditionCategory @default(DIAGNOSIS)
  notes       String?           @db.Text
  diagnosedAt DateTime?
  diagnosedBy String?           // Doctor/Hospital name
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isActive])
}

model ChatSession {
  id        String    @id @default(cuid())
  userId    String
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  source    String?
  metadata  Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId])
  @@index([userId, startedAt])
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  userId    String?
  role      MessageRole
  content   String      @db.Text
  createdAt DateTime    @default(now())
  
  // Health data extraction
  extractedHealthData   Json?    // Structured data extracted by AI
  wasProcessedForHealth Boolean  @default(false)

  session       ChatSession     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user          User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  healthJournal HealthJournal[]

  @@index([sessionId])
  @@index([userId])
  @@index([userId, wasProcessedForHealth])
}

model UserMemory {
  id         String           @id @default(cuid())
  userId     String
  key        String
  value      Json
  importance MemoryImportance @default(MEDIUM)
  lastUsedAt DateTime?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
  @@index([userId, importance])
}

enum Sex {
  MALE
  FEMALE
  OTHER
  UNKNOWN
}

model HealthJournal {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime // Date of symptom/feeling
  
  // Symptom details
  symptomName String   // "Fatigue", "Headache", "Anxiety"
  severity    Int?     // 1-10 scale
  triggers    String?  @db.Text // "lot of work", "didn't sleep well"
  duration    String?  // "all day", "2 hours", "morning only"
  bodyPart    String?  // "head", "stomach", "back"
  notes       String?  @db.Text
  
  // Context
  moodScore      Int? // 1-10
  energyLevel    Int? // 1-10
  stressLevel    Int? // 1-10
  sleepQuality   Int? // 1-10 (if mentioned that day)
  
  // Tracking
  resolved       Boolean  @default(false)
  resolvedAt     DateTime?
  
  // Links
  sourceMessageId String?
  sourceMessage   ChatMessage? @relation(fields: [sourceMessageId], references: [id], onDelete: SetNull)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
  @@index([userId, symptomName])
  @@index([userId, date, symptomName])
}

enum ConditionCategory {
  CHRONIC    // Long-term conditions (diabetes, hypertension)
  ACUTE      // Short-term conditions
  SYMPTOM    // Temporary symptoms
  DIAGNOSIS  // Formally diagnosed by healthcare provider
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum MemoryImportance {
  LOW
  MEDIUM
  HIGH
}

model FoodLog {
  id          String   @id @default(cuid())
  userId      String
  
  // Food details
  imageUrl    String?  // Optional: store image URL if needed
  description String   // "Grilled chicken with rice and vegetables"
  calories    Int      // Estimated calories
  protein     Float?   // grams
  carbs       Float?   // grams
  fat         Float?   // grams
  fiber       Float?   // grams
  
  // Meal context
  mealType    MealType @default(OTHER)
  portionSize String?  // "1 plate", "medium bowl"
  confidence  Float?   // AI confidence score 0-1
  
  // Timestamps
  eatenAt     DateTime @default(now()) // When the food was eaten
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, eatenAt])
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
  OTHER
}

// ==================== PUSH NOTIFICATIONS ====================

model PushToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   // Expo push token (ExponentPushToken[xxx])
  platform  Platform @default(UNKNOWN)
  deviceId  String?  // Optional device identifier
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
  @@index([userId])
  @@index([token])
  @@index([userId, isActive])
}

enum Platform {
  IOS
  ANDROID
  UNKNOWN
}

model PushNotificationLog {
  id           String             @id @default(cuid())
  userId       String
  type         NotificationType
  title        String
  body         String
  data         Json?
  status       NotificationStatus @default(PENDING)
  ticketId     String?            // Expo ticket ID
  receiptId    String?            // Expo receipt ID
  errorMessage String?
  sentAt       DateTime?
  createdAt    DateTime           @default(now())

  @@index([userId])
  @@index([userId, type])
  @@index([status])
}

enum NotificationType {
  WEEKLY_SUMMARY
  PATTERN_DETECTED
  HEALTH_INSIGHT
  REMINDER
  SYSTEM
}

enum NotificationStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
}
